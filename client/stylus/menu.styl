.applicationLayout > .applicationMenu {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: auto;
  height: auto;

  .list-vertical {
    position: absolute;
    left: 25%;
    top: 50%;
    -webkit-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    * {
      text-decoration: none;
      color: #333;
      display: block;
      font-size: 28px;

      @media screen and (max-width: 480) {
        font-size: 22px;
      }

      line-height: 32px;
      margin-bottom: 1.25rem;
      opacity: 0;
      -webkit-transform: translateX(-1000px);
      -moz-transform: translateX(-1000px);
      -o-transform: translateX(-1000px);
      -ms-transform: translateX(-1000px);
      transform: translateX(-1000px);
      -webkit-transition: -webkit-transform 400ms cubic-bezier(0.165, 0.84, 0.44, 1), opacity 300ms ease-in;
      -moz-transition: -moz-transform 400ms cubic-bezier(0.165, 0.84, 0.44, 1), opacity 300ms ease-in;
      -o-transition: -o-transform 400ms cubic-bezier(0.165, 0.84, 0.44, 1), opacity 300ms ease-in;
      transition: -webkit-transform 400ms cubic-bezier(0.165, 0.84, 0.44, 1), opacity 300ms ease-in;
    }
  }
}

.menu-open .applicationMenu .list-vertical >* {
  opacity: 1;
  -webkit-transform: translateX(0px);
  -moz-transform: translateX(0px);
  -o-transform: translateX(0px);
  -ms-transform: translateX(0px);
  transform: translateX(0px);
}

$childs = 5;
for row in 1...$childs
  .menu-open .applicationMenu .list-vertical >*:nth-child({row}) {
    -webkit-transition-delay: 0.04s * row;
    -moz-transition-delay: 0.04s * row;
    -o-transition-delay: 0.04s * row;
    transition-delay: 0.04s * row;
  }


