.documentation {
  height: 100%;

  header.default {
    text-align: center;
    margin: 0;
    padding-left: 1.25em;
    padding-right: 1.25em;
    padding-top: 8em;
    
    .page-title {
      font-size: 56px;
      font-weight: 300;
      height: 56px;
      margin-bottom: 0.75rem;
    }

    .description {
      font-size: 20px;
      line-height: 24px;
    }
  }

  .section {
    margin: 0 11.11111%;

    @media screen and (max-width: 800px) {
      margin: 0 5.5555%;
    }

    padding-top: 3em;
    padding-left: 1.25em;
    padding-right: 1.25em;

    a {
      color: #6064ad;
      cursor: pointer;
      text-decoration: none;

      &:hover {
        text-decoration: underline;
      }
    }

    code {
      color: #2ca699;
      display: inline-block;
      vertical-align: baseline;
      padding-left: 2px;
      padding-right: 2px;
    }

    code, pre {
      font-size: 13px;
      line-height: 18px;
      font-family: "Andale Mono WT", "Andale Mono", "Lucida Console", "Lucida Sans Typewriter", Monaco, monospace;
      font-weight: 400;
      background: #f9f9f9;
      box-shadow: #f1f1f1 0 0 0 1px inset;
      border-radius: 2px;
    }

    h1 {
      font-size: 50px;
      font-weight: 300;
      height: 50px;
      margin-bottom: 0.35rem;
    }

    h2 {
      margin-bottom: 1rem;
      border-bottom: 1px solid #eeeeee;
      font-size: 24px;
      font-weight: 600;
      line-height: 1em;
      padding: .5em 0;
    }

    h3 {
      margin-bottom: .25rem;
      font-weight: 600;
      line-height: 1em;
      padding: .5em 0;
      font-size: 20px;
    }

    img {
      width: 100%;
      padding: 5px;
      box-shadow: 0 0 35px 0 black;
      margin: 1.55rem 0;
    }

    iframe {
      box-shadow: 0 0 35px 0 black;
      padding: 0;
      border-radius: 10px;
      margin: 0;
      width: 100%;
      height: 800px;
      margin-bottom: 50px;
    }
  }



}