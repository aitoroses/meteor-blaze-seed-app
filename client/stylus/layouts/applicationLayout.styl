.applicationLayout {
  height: auto;
  width: auto;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;

  .content {

    &.white {
      background: rgba(white, 0.85);
    }

    height: 100%;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;

    .applicationHeader {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      width: auto;
      //height: auto;
      height: 0;
      text-align: center;
      z-index: 1;
      &.white {
        color: white;
      }
      .menu-button {
        font-size: 24px;
        line-height: 28px;
        cursor: pointer;
        position: absolute;
        top: 8px;
        right: auto;
        bottom: auto;
        left: 8px;
        width: 48px;
        height: 48px;
        i {
          line-height: 48px;
          vertical-align: middle;
        }
      }
      .title {
        font-size: 16px;
        font-weight: 600;
        display: inline-block;
        letter-spacing: .15em;
        line-height: 48px !important;
        margin-top: .5rem;
        text-transform: uppercase;
      }
    }
    opacity: 1;
    box-shadow: rgba(0, 0, 0, 0.3) 0 0 10px 3px;
    -webkit-transform: scale(1);
    -moz-transform: scale(1);
    -o-transform: scale(1);
    -ms-transform: scale(1);
    transform: scale(1);
    -webkit-transition: all 400ms cubic-bezier(0.175, 0.885, 0.335, 1.05);
    -moz-transition: all 400ms cubic-bezier(0.175, 0.885, 0.335, 1.05);
    -o-transition: all 400ms cubic-bezier(0.175, 0.885, 0.335, 1.05);
    transition: all 400ms cubic-bezier(0.175, 0.885, 0.335, 1.05);
    -webkit-backface-visibility: hidden;
    -moz-backface-visibility: hidden;
    -o-backface-visibility: hidden;
    -ms-backface-visibility: hidden;
    backface-visibility: hidden;

    .applicationHome {
      height: 100%;
    }
  }

  .applicationFooter {}
}

.applicationLayout.menu-open > .content {
  opacity: .9;
  -webkit-transform: translate3d(60%, 0, 0) scale(0.85);
  -moz-transform: translate3d(60%, 0, 0) scale(0.85);
  -o-transform: translate3d(60%, 0, 0) scale(0.85);
  -ms-transform: translate3d(60%, 0, 0) scale(0.85);
  transform: translate3d(60%, 0, 0) scale(0.85);
}